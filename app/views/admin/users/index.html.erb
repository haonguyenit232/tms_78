<%= provide :title, t(".title") %>
<section id="service" class="admin-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 padding-0 margin-bottom-20">
        <h3 class="animated fadeInLeft"><%= t ".all_users" %></h3>
      </div>
      <div>
        <span class="pull-right margin-bottom-10">
          <%= link_to new_admin_user_path, class: "btn btn-success" do %>
            <i class="fa fa-user-plus custom"></i>
            <%= t ".btn_create" %>
          <% end %>
        </span>
      </div>
      <div class="responsive-table">
        <table id="table_list" class="table table-striped table-bordered">
          <thead>
            <tr>
              <th class="text-center"><%= t ".name" %></th>
              <th class="text-center"><%= t ".email" %></th>
              <th class="text-center"><%= t ".role" %></th>
              <th class="text-center"><%= t ".create_at" %></th>
              <th class="text-center" colspan="3"><%= t ".action" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "user", collection: @users %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
