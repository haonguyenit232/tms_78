<fieldset>
  <div class="form-group">
    <%= render "shared/error_messages", object: f.object %>
  </div>
  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="fa fa-wpforms"></i>
        </span>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-md-4 control-label" %>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-pencil"></i>
        </span>
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class = "col-md-4 control-label"><%= t ".range_date" %></label>
    <div class="col-md-4 inputGroupContainer">
      <div class="input-group">
        <span class="input-group-addon">
          <i class="glyphicon glyphicon-calendar"></i>
        </span>
        <input type="text" id="range-date" class="form-control">
        <%= f.hidden_field :start_date, class: "form-control" %>
        <%= f.hidden_field :end_date, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class = "col-md-4 control-label"><%= t ".subjects" %></label>
    <div class="responsive-table col-md-4">
      <table class="table table-striped table-bordered width-100" cellspacing="0">
        <thead>
          <tr>
            <th class = "text-center"><%= t ".subject_name" %></th>
            <th class = "text-center"></th>
          </tr>
        </thead>
        <tbody>
          <%= f.fields_for :course_subjects do |builder| %>
            <tr>
              <td class = "text-center"><%= builder.object.subject.name %></td>
              <td class = "text-center">
                <%= builder.check_box :_destroy,
                  {checked: builder.object.persisted?}, 0, 1 %>
                  <%= builder.hidden_field :subject_id,
                    value: builder.object.subject_id %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label"></label>
    <div class="col-md-4">
      <%= f.submit t(".create_button"), class: "btn btn-info" %>
    </div>
  </div>
</fieldset>
