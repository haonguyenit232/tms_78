<%= provide :title, t(".title") %>
<%= provide :title_header, t(".title_header") %>
<section id="service" class = "admin-section">
  <div class="container">
    <div class="row">
      <%= render "admin/shared/title_header" %>
      <div class = "row margin-bot-20">
        <div class="form-group">
          <div class="col-md-4">
            <%= link_to new_admin_course_path, class: "btn btn-info" do %>
              <%= t ".add_new_button" %>
              <span class="glyphicon glyphicon-plus"></span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="responsive-table">
        <table id="table_list"
          class="table table-striped table-bordered width-100" cellspacing="0">
          <thead>
            <tr>
              <th class = "text-center"><%= t ".course_name" %></th>
              <th class = "text-center"><%= t ".start_date" %></th>
              <th class = "text-center"><%= t ".end_date" %></th>
              <th class = "text-center"><%= t ".status" %></th>
              <th class="text-center" data-orderable="false"></th>
              <th class="text-center" data-orderable="false"></th>
              <th class="text-center" data-orderable="false"></th>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td class = "text-center"><%= link_to course.name, "#" %></td>
                <td class = "text-center">
                  <%= l course.start_date, format: :default %>
                </td>
                <td class = "text-center">
                  <%= l course.end_date, format: :default %>
                </td>
                <td class = "text-center">
                  <span class="label label-outline label-<%= show_status course %>">
                    <%= course.status %>
                  </span>
                </td>
                <td class="text-center">
                  <%= link_to "#", class: "text-success" do %>
                    <span class="glyphicon glyphicon-search"></span>
                    <%= t ".view" %>
                  <% end %>
                </td>
                <td class="text-center">
                  <%= link_to edit_admin_user_path(course) do %>
                    <span class="glyphicon glyphicon-edit"></span>
                    <%= t ".edit" %>
                  <% end %>
                </td>
                <td class="text-center">
                  <%= link_to admin_user_path(course), method: :delete,
                    data: {confirm: t(".confirm_delete")}, class: "text-danger" do %>
                    <span class="glyphicon glyphicon-trash"></span>
                    <%= t ".delete" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
